{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "modules": true
    },
    "rules": {
        "indent": [
            2,
            2,
            {"VariableDeclarator": 2, "SwitchCase": 1}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "no-console": 0,

        "react/wrap-multilines": 2,
        "react/jsx-uses-react": 2
    },
    "plugins": [
        "react"
    ]
}
